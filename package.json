{
  "name": "neo4j-service",
  "version": "1.0.3",
  "description": "A tiny service to manage neo4j query",
  "author": "AdriÃ¡n Insua",
  "license": "MIT",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=3.8"
  },
  "scripts": {
    "start": "NODE_ENV=production node dist/server.js",
    "build": "rimraf dist && NODE_ENV=production babel --extensions '.ts' src --out-dir dist",
    "dev": "nodemon src/server.ts",
    "test": "NODE_ENV=test jest --detectOpenHandles --forceExit",
    "cover": "npm run test -- --coverage",
    "lint": "eslint --fix \"src/**/*.ts\""
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.7",
    "@koa/cors": "^2.2.2",
    "@types/jest": "^25.2.1",
    "@typescript-eslint/parser": "^2.28.0",
    "awilix": "^4.0.1",
    "awilix-koa": "^3.0.0",
    "babel-preset-env": "^1.7.0",
    "chalk": "^4.0.0",
    "commit-message-validator": "^0.1.11",
    "eslint-plugin-prettier": "^3.1.3",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.1.0",
    "koa-respond": "^2.1.0",
    "koa-router": "^7.4.0",
    "neo4j-driver": "^4.0.2",
    "palin": "^2.2.0",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3",
    "winston": "^3.2.1",
    "winston-transport": "^4.3.0",
    "yenv": "^2.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/plugin-transform-typescript": "^7.9.4",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.1",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.39",
    "@types/node": "^10.12.21",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "eslint": "^6.0.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^1.2.1",
    "jest": "^25.0.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "supertest": "^4.0.2",
    "ts-node": "^5.0.1"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "husky": {
    "hooks": {
      "commit-msg": "commit-message-validator",
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "lint-staged": {
    "*.{js, json, ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commit-message-validator": {
      "pattern": "^\\[\\#[\\d]+\\]\\s.*$",
      "errorMessage": "Invalid commit message. Valid example: #8 Fix typo"
    }
  },
  "nodemonConfig": {
    "execMap": {
      "js": "babel-node"
    }
  },
  "babel": {
    "sourceMaps": "both",
    "plugins": [
      "@babel/plugin-transform-typescript",
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-proposal-class-properties"
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.test.json"
      }
    },
    "testMatch": [
      "**/tests/*.test.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json",
      "node"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "tests",
      "src/lib/env",
      "src/bin"
    ]
  }
}
